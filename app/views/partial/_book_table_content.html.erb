<tr>
  <td><%= link_to book.title, review_path+"/#{book.id}" %></td>
  <td><%= book.author %></td>
  <td><%= book.genre.name %></td>
  <td><%= book.read_statuses.first.begin_date||"未読" %></td>
  <td><%= book.read_statuses.first.end_date||"未読" %></td>
  <td><%= book.read_statuses.first.score||"未採点" %></td>
  <th>
    <%= check_box_tag "favorite", true, book.read_statuses.first.favorite, {id:"#{book.id}"} %>
    <label class="table-favorite-check" for="<%= book.id%>"></label>
  </th>
</tr>
