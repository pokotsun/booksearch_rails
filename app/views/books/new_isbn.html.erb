<div class="row isbn-input-area-wrapper">
  <%= form_tag new_book_path, method: :get, remote: true do %>
    <div class="input-field col s6">
      <i class="material-icons prefix">mode_edit</i>
      <input id="input_isbn" name="isbn" type="text" data-length="13">
      <label for="input_isbn">ISBNコードを入力してください</label>
    </div>
    <button class="btn btn-large isbn-submit-button waves-effect waves-light">送信
      <i class="material-icons right">send</i>
    </button>
  <% end %>
</div>
<div id="footer">
</div>
